@model Car

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="width: 400px;">
        <h2 class="text-danger">Delete Car</h2>
        <p>Are you sure you want to delete this car?</p>
        <dl class="row">
            <dt class="col-sm-4">Brand:</dt>
            <dd class="col-sm-8">@Model.Brand</dd>
            <dt class="col-sm-4">Model:</dt>
            <dd class="col-sm-8">@Model.Model</dd>
            <dt class="col-sm-4">Year:</dt>
            <dd class="col-sm-8">@Model.Year</dd>
            <dt class="col-sm-4">Price/Day:</dt>
            <dd class="col-sm-8">@Model.PricePerDay</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger w-100">Delete</button>
        </form>
        <hr>
        <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
    </div>
</div>
