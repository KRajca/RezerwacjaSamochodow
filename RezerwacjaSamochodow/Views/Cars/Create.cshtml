@model Car

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center">Create Car</h2>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year" class="form-control" placeholder="Enter manufacturing year" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PricePerDay" class="form-label"></label>
                <input asp-for="PricePerDay" class="form-control" placeholder="Enter rental price per day" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">Create</button>
        </form>
        <hr>
        <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
    </div>
</div>
