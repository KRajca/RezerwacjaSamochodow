@model Reservation

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4 text-center" style="width: 400px;">
        <h2 class="text-danger">Delete Reservation</h2>
        <p>Are you sure you want to delete this reservation?</p>
        <dl class="row">
            <dt class="col-sm-4">Car Brand:</dt>
            <dd class="col-sm-8">@Model.Car.Brand</dd>
            <dt class="col-sm-4">Start Date:</dt>
            <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-4">End Date:</dt>
            <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-4">User ID:</dt>
            <dd class="col-sm-8">@Model.UserId</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger w-100">Delete</button>
        </form>
        <hr>
        <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
    </div>
</div>
