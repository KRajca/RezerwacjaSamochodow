@model Reservation

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center">Reservation Details</h2>
        <dl class="row">
            <dt class="col-sm-4">Car Brand:</dt>
            <dd class="col-sm-8">@Model.Car.Brand</dd>
            <dt class="col-sm-4">Start Date:</dt>
            <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-4">End Date:</dt>
            <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-4">User Email:</dt>
            <dd class="col-sm-8">@Model.User.Email</dd>
        </dl>
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">Delete</a>
        </div>
    </div>
</div>
